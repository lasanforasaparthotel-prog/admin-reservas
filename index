    <!-- Toast de Deshacer -->
    <div id="undo-toast" class="fixed bottom-5 left-1/2 -translate-x-1/2 bg-slate-800 text-white py-3 px-5 rounded-lg shadow-xl flex items-center gap-4 transform translate-y-20 opacity-0">
